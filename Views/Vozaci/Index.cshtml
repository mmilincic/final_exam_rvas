@model IEnumerable<Vozac>

<h2>Lista Vozaca</h2>

<table id="stazeTable" class="display table table-striped">
    <thead>
        <tr>
            <th>Ime</th>
            <th>Prezime</th>
            <th>Nacionalnost</th>
            <th>Datum Rodjenja</th>
            <th>Tim</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vozac in Model)
        {
            <tr>
                <td>@vozac.ime</td>
                <td>@vozac.prezime</td>
                <td>@vozac.nacionalnost</td>
                <td>@vozac.datumRodjenja</td>
                <td>@vozac.Tim.nazivTima</td>
                <td><a href="@vozac.vozacId">Izmeni Detalje o vozaču</a></td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function() {
        var table = $('#stazeTable').DataTable({
            "searching": false
        });

        $('#pregledaj').on('keyup', function() {
            table.search(this.value).draw();
        });
    });
</script>