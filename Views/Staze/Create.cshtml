@model Formula.Models.Staza

@{
    ViewData["Title"] = "Dodaj Stazu";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="nazivStaze">Ime Staze</label>
        <input asp-for="nazivStaze" id="nazivStaze" class="form-control" minLenght="1" required/>
    </div>

    <div class="form-group">
        <label asp-for="duzina">Duzina Staze u KM</label>
        <input asp-for="duzina" id="duzina" class="form-control" required pattern="[^a-z]\d?+|(\W\d)" title="Mora da bude broj"/>
    </div>

    <input type="submit" class="aero" value="Submit"/>
    <a asp-action="Index" class="aero danger"></a>
</form>

<script>
    document.querySelector('form').addEventListener('submit', function(event) {
    const nazivStazeInput = document.getElementById('nazivStaze');
    const duzinaInput = document.getElementById('duzina');

    if (nazivStazeInput.value.trim() === '') {
        alert('Naziv staze je obavezan!');
        event.preventDefault();
        return;
    }

    if (parseFloat(duzinaInput.value) <= 0) {
        alert('Dužina staze mora biti veća od nule!');
        event.preventDefault();
        return;
    }
});
</script>
